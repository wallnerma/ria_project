    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Launch Firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "file": "${file}"
        },
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "reAttach": true,
            "file": "${file}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome gegen localhost starten",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        }
    ]
}